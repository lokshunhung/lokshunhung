{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["DOM", "ESNext"],
        "jsx": "react-jsxdev",
        "noEmit": true,

        "strict": true,
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true,

        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": false,
        "esModuleInterop": false,

        "paths": {
            "~/src/*": ["./src/*"]
        }
    }
}
